
@{
    ViewBag.Title = "Login";
}
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</head>

<h2>Login</h2>
@using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        <div><label class="col-md-2 control-label">ID</label></div>
        <div><input type="text" class = "form-control" name="id"/></div>
    </div>
    <div class="form-group">
        <div><label class="col-md-2 control-label">Password</label></div>
        <div><input type="password" class="form-control" name="pass" /></div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-4 col-md-10">
            <input type="submit" value="Login" class="btn btn-default" />
        </div>
    </div>
}
