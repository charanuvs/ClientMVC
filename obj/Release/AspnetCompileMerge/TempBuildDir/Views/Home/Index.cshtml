@using ClientMVC.Models;

@{
    ViewBag.Title = "Home page for Lunch Money crediting system.";
}

<head>
    <meta charset="utf-8" />
    <script src="http://code.jquery.com/jquery-1.11.2.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">
    <title></title>
    <style>
        .form-label-spacing {
            margin-top: 15px;
        }

        .form-group-spacing {
            margin-left: 20px;
        }
    </style>
</head>

<h2>Index</h2>

@{
    var user = Session["user"] as User;
    var apiKey = Session["apiKey"].ToString();
}
<div>
    @Html.ActionLink("Click here to see past transactions", "Transactions", "Home")
</div>
<div style="float:right">
    @Html.ActionLink("Logout", "Logout", "Login")
</div>
<h3>Welcome @user.name</h3>
<h3 style="color:red; font-style:oblique">@Session["error"]</h3>
<h3 style="color:@Session["color"]; font-style:oblique">@Session["final"]</h3>
<h2>Make a Lunch credit payment here:</h2>

@using (Html.BeginForm())
{
    <table border="0">
        <tr>
            <td>

                <table border="0" >
                    <tr>
                        <td>
                            <label class="col-md-2 control-label">
                                Amount
                            </label>
                        </td>
                        <td colspan="3">
                            <input type="text" name="amount" class="form-control" />
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <label class="col-md-2 control-label">
                                Card Number
                            </label>
                        </td>
                        <td colspan="3">
                            <input type="text" name="card" class="form-control" pattern="^\d{16}$" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label class="col-md-2 control-label">
                                CVC
                            </label>
                        </td>
                        <td colspan="3">
                            <input type="text" width="2" name="cvc" class="form-control col-md-2" style="width:20%" pattern="^\d{4}$" />
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <label class="col-md-2 control-label">
                                Expiration (MM/YYYY)
                            </label>
                        </td>
                        <td class="col-md-2" style="align-self:flex-start">
                            <input type="text" name="expmonth" class="form-control" pattern="^\d{2}$" />
                        </td>
                        <td align="left">
                            <span style="font-size:x-large"> / </span>
                        </td>
                        <td align="left">
                            <input type="text" size="4" name="expyear" class="form-control" style="width:25%" pattern="^\d{4}$" />
                        </td>
                    </tr>
                    <tr>
                        <td class="col-md-3">
                            <label class="control-label">
                                Name on card
                            </label>
                        </td>
                        <td colspan="3">
                            <input type="text" name="fullname" class="form-control" />
                        </td>
                    </tr>
                </table>

            </td>
            <td>

                <table border="0">
                    <tr>
                        <td class="col-md-4">
                            <label class="control-label">
                                <span>Billing Address line 1</span>
                            </label>
                        </td>
                        <td>
                            <input type="text" size="20" name="bilingaddline1" class="form-control" />
                        </td>
                    </tr>

                    <tr>
                        <td class="col-md-6">
                            <label class="control-label">
                                <span>Billing Address line 2</span>
                            </label>
                        </td>
                        <td>
                            <input type="text" size="20" name="bilingaddline2" class="form-control" />
                        </td>

                    </tr>

                    <tr>
                        <td class="col-md-4">
                            <label class="col-md-4 control-label">
                                <span>City</span>
                            </label>
                        </td>
                        <td>
                            <input type="text" size="20" name="city" class="form-control" />
                        </td>
                    </tr>
                    <tr>
                        <td class="col-md-4">
                            <label class="col-md-4 control-label">
                                <span>State</span>
                            </label>
                        </td>
                        <td>
                            <input type="text" size="20" name="state" class="form-control" />
                        </td>

                    </tr>

                    <tr>
                        <td class="col-md-4">
                            <label class="col-md-4 control-label">
                                <span>Country</span>
                            </label>
                        </td>
                        <td>
                            <input type="text" size="20" name="country" class="form-control" />
                        </td>
                    </tr>

                    <tr>
                        <td class="col-md-4">
                            <label class="col-md-4 control-label">
                                <span>Zip</span><br />
                            </label>
                        </td>
                        <td>
                            <input type="text" size="20" name="zip" class="form-control" pattern="^\d{5}$" />
                        </td>
                    </tr>
                  
                </table>

            </td>
        </tr>
        <tr><td colspan="2" align="right" ><button type="submit">Submit Payment</button></td></tr>
    </table>

    <br />

}
